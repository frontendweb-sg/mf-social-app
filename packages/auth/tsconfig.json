{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ES2015"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "**.d.ts"],
  "exclude": ["node_modules"]
}
